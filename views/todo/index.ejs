<!DOCTYPE html>
<html>
  <head>
    <title>Todo List</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container">
      <h3><a href="/todos/create">Create Todo</a></h3>
      <h1>Todo List</h1>
      <% if(todos.length>0) { %>
      <table>
        <thead>
          <tr>
            <th>Todo Label</th>
            <th>Content</th>
          </tr>
        </thead>
        <tbody>

          <% for(var i=0; i<todos.length;i++) { %>
            <tr>
              <td><a href="/todos/show/<%= todos[i]._id%>"><%= todos[i].label%></a></td>
              <td><%= todos[i].content%></td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <% } else { %>
        <div>No todo found.</div>
      <% } %>
    </div>
  </body>
</html>